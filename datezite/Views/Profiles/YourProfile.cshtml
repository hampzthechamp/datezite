                        @Html.ActionLink(user.Förnamn+" "+user.Efternamn,"OtherProfile")
                    </a>
                }*@
        </div>
        <div class="" id="senasteBes">

        </div>

    </div>
    
    <div class="col-6">

        <div class="card mb-3">
            <h3 class="card-header">@Html.DisplayFor(m => m.Förnamn) @Html.DisplayFor(m => m.Efternamn) </h3>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(m => m.Kön), @Html.DisplayFor(m => m.Ålder)</h5>
            </div>

            <img src="@Url.Action("UserPhotos", "Profiles" )" style="width:250px;height:250px; background: #FFFFFF;
                margin: auto;
                -moz-border-radius: 60px;
                border-radius: 100px;
                padding: 6px;
                box-shadow: 0px 0px 20px #888;" />

            <div class="card-body">
                <p>@Html.DisplayFor(m => m.Sysselsättning)</p>
                <p>@Html.DisplayFor(m => m.Intressen)</p>
                <a href="User/" class="card-link" style="float:right">@Html.ActionLink("Redigera Profil", "EditYourProfile")</a>
            </div>
            <div class="card-footer text-muted">
                Senast inloggad: 2 days ago
            </div>
        </div>






    </div>
    <div class="col">
        <div class="form-group">
            <h3>Vägg</h3>
            <textarea class="form-control" id="entryCont" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 103px;" placeholder="Din text här.." ></textarea>
        </div>

        <button type="button" class="btn btn-primary btn-sm" style="margin-bottom: 20px" id="send">Publicera</button>
        <div id="inlägg">
            @*@foreach (var entry in Model.Inlägg)
                    {
                <div class="card border-light mb-3" style="max-width: 20rem; ">
                    <div class="card-header">@entry.Author.Förnamn @entry.Author.Efternamn</div>
                    <div class="card-body">

                        <p class="card-text">@entry.Content</p>
                    </div>
                </div>

                }*@
        </div>
    </div>


</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    $('#send').on('click', function () {

        var repId = "@Model.Id";
        var authId = "@HttpContext.Current.User.Identity.GetUserId()";
        var cont = $('#entryCont').val();
        var objEntry = {
            Content: cont,
            AuthorId: authId,
            RecipientId: repId
        };
        var entry = JSON.stringify(objEntry);

        $.ajax({
            type: 'POST',
            data: entry,
            dataType: 'JSON',
            contentType: 'application/json',
            url: '@Url.Action("Post", "EntryApi", new { httproute = "" } )',
            success: function (data) {
                $('#entryCont').val('');

            }
        });


    });

</script>